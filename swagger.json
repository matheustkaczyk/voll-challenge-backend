{
  "openapi": "3.0.0",
  "info": {
    "title": "Auth",
    "version": "1.0.0"
  },
  "basepath": "/",
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "Signup",
        "requestBody": 
        {
          "in": "body",
          "name": "user",
          "description": "Create a new user account",
          "type": "object",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Signup"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso"
          },
          "400": {
            "description": "Requisição não contém todos os dados necessários"
          }
        }
      }
    },
    "/auth/signin": {
      "post": {
        "tags": ["Auth"],
        "summary": "Signin",
        "requestBody": 
        {
          "in": "body",
          "name": "user",
          "description": "Signin with email and password",
          "type": "object",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Signin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário autenticado com sucesso"
          },
          "401": {
            "description": "Usuário não encontrado"
          }
        }
      }
    },
    "/user/all": {
      "get": {
        "tags": ["User"],
        "summary": "Pega todos os usuários",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário retornado com sucesso"
          },
          "404": {
            "description": "Not found"
          },
          "400": {
            "description": "Usuário não autenticado"
          }
        }
      }
    },
    "/user/": {
      "get": {
        "tags": ["User"],
        "summary": "Pega o usuário autenticado",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário retornado com sucesso"
          },
          "404": {
            "description": "Not found"
          },
          "400": {
            "description": "Usuário não autenticado"
          }
        }
      }
    },
    "/user/currency/": {
      "patch": {
        "tags": ["User"],
        "summary": "Atualiza a moeda do usuário",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": 
        {
          "in": "body",
          "name": "user",
          "description": "Atualiza a moeda do usuário com base no corpo da requisição, que é uma string de uma operação e o valor desejado (PODE APENAS SER FEITA POR UM ADMINISTRADOR)",
          "type": "object",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Currency"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Moeda atualizada com sucesso"
          },
          "401": {
            "description": "Usuário não autenticado"
          },
          "404": {
            "description": "Requisição não contém todos os dados necessários"
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": ["Products"],
        "summary": "Pega todos os produtos",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Produtos retornados com sucesso"
          },
          "404": {
            "description": "Not found"
          },
          "400": {
            "description": "Usuário não autenticado"
          }
        }
      },
      "post": {
        "tags": ["Products"],
        "summary": "Cria um novo produto",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": 
        {
          "in": "body",
          "name": "product",
          "description": "Cria um novo produto com base no corpo da requisição, que é um objeto com os dados do produto",
          "type": "object",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Produto criado com sucesso"
          },
          "400": {
            "description": "Requisição não contém todos os dados necessários"
          }
        }
      }
    },
    "/products/{id}": {
      "put": {
        "tags": ["Products"],
        "summary": "Atualiza um produto",
        "parameters":[{
          "in": "path",
          "name": "id",
          "description": "ID do produto"
        }],
        "requestBody": 
        {
          "in": "body",
          "name": "product",
          "description": "Atualiza um produto com base no corpo da requisição, que é um objeto com os dados do produto",
          "type": "object",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Produto atualizado com sucesso"
          },
          "404": {
            "description": "Not found"
          },
          "400": {
            "description": "Usuário não autenticado"
          }
        }
      },
      "delete": {
        "tags": ["Products"],
        "summary": "Deleta um produto",
        "security": {
          "bearerAuth": []
        },
        "parameters":[{
          "in": "path",
          "name": "id",
          "description": "ID do produto"
        }],
        "responses": {
          "200": {
            "description": "Produto deletado com sucesso"
          },
          "404": {
            "description": "Not found"
          },
          "400": {
            "description": "Usuário não autenticado"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Signup": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "required": true
          },
          "email": {
            "type": "string",
            "required": true
          },
          "password": {
            "type": "string",
            "required": true
          }
        }
      },
      "Signin": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "required": true,
            "example": "root@root.com"
          },
          "password": {
            "type": "string",
            "required": true,
            "example": "root"
          }
        }
      },
      "Currency": {
        "type": "object",
        "properties": {
          "currency": {
            "type": "string",
            "required": true,
            "example": "+500"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "required": true
          },
          "description": {
            "type": "string",
            "required": true
          },
          "price": {
            "type": "number",
            "required": true
          },
          "img_url": {
            "type": "string",
            "required": true
          },
          "stock": {
            "type": "number",
            "required": true
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
    }
    }
  }
}